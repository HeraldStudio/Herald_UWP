<Page
    x:Class="Herald_UWP.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Herald_UWP.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:ConnectionId='1' x:Uid="MainPivot" x:Name="Pivot">
            <PivotItem x:Uid="Home"
                       Header="主页">
                <StackPanel Orientation="Vertical">
                    <ListView Height="500">
                        <StackPanel>
                            <TextBlock>绩点</TextBlock>
                            <TextBlock x:ConnectionId='4' x:Name="GPA"/>
                        </StackPanel>
                    </ListView>
                    <Button x:ConnectionId='3' x:Name="Button_DeleteFile"
                            Content="删除本地文件"
                        Height="47"
                        Width="134"
                                           
                        HorizontalAlignment="Center"/>
                </StackPanel>
            </PivotItem>

            <PivotItem x:Uid="Activity"
                       Header="活动">
            </PivotItem>

            <PivotItem x:Uid="Module"
                       Header="模块">
            </PivotItem>

            <PivotItem x:Uid="Mine"
                       Header="我的">
                <Button x:ConnectionId='2' x:Name="Button_logout" 
                        Content="退出登录" 
                        HorizontalAlignment="Center" 
                        Height="47" 
                        Margin="0,500,0,0" 
                        VerticalAlignment="Top" 
                                      
                        Width="134"/>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

